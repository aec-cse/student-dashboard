rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isAdmin() {
      return isAuthenticated() && 
        exists(/databases/$(database)/documents/admins/$(request.auth.uid));
    }
    
    function isStudent() {
      return isAuthenticated() && 
        exists(/databases/$(database)/documents/student-registrations/$(request.auth.uid));
    }
    
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    function isValidStudentRegistration() {
      let requiredFields = [
        'fullName', 'email', 'contact', 'internshipId', 
        'photographURL', 'signatureURL', 'status', 
        'applicationDate', 'userId'
      ];
      return request.resource.data.keys().hasAll(requiredFields) &&
             request.resource.data.status in ['pending', 'approved', 'rejected'];
    }
    
    function isValidAdminData() {
      let requiredFields = ['email', 'role'];
      return request.resource.data.keys().hasAll(requiredFields) &&
             request.resource.data.role == 'admin';
    }

    function isValidCourseData() {
      let requiredFields = ['courseName', 'courseCode', 'instructor', 'schedule'];
      return request.resource.data.keys().hasAll(requiredFields);
    }

    function isValidGradeData() {
      let requiredFields = ['studentId', 'courseId', 'midterm', 'final', 'assignment', 'total', 'letterGrade'];
      return request.resource.data.keys().hasAll(requiredFields) &&
             request.resource.data.total >= 0 &&
             request.resource.data.total <= 100;
    }

    function isValidAttendanceData() {
      let requiredFields = ['studentId', 'courseId', 'date', 'status'];
      return request.resource.data.keys().hasAll(requiredFields) &&
             request.resource.data.status in ['present', 'absent', 'late'] &&
             request.resource.data.date is timestamp;
    }

    function isValidNotificationData() {
      let requiredFields = ['title', 'message', 'type', 'timestamp', 'recipients'];
      return request.resource.data.keys().hasAll(requiredFields) &&
             request.resource.data.type in ['info', 'warning', 'important'] &&
             request.resource.data.timestamp is timestamp &&
             request.resource.data.recipients is list;
    }
    
    // Rules for student-registrations collection
    match /student-registrations/{registrationId} {
      allow read: if isAuthenticated() && (isAdmin() || isOwner(resource.data.userId));
      allow create: if isAuthenticated() && (
        isAdmin() || 
        (request.resource.data.userId == request.auth.uid && isValidStudentRegistration())
      );
      allow update: if isAuthenticated() && (
        isAdmin() || 
        (isOwner(resource.data.userId) && 
         request.resource.data.diff(resource.data).affectedKeys().hasOnly(['status']))
      );
      allow delete: if isAdmin();
    }

    // Rules for admins collection
    match /admins/{adminId} {
      allow read: if isAdmin();
      allow create: if isAdmin() && isValidAdminData();
      allow update: if isAdmin() && adminId == request.auth.uid && isValidAdminData();
      allow delete: if false; // Prevent admin deletion
    }

    // Rules for courses collection
    match /courses/{courseId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin() && isValidCourseData();
    }

    // Rules for enrollments collection
    match /enrollments/{enrollmentId} {
      allow read: if isAuthenticated() && 
        (isAdmin() || resource.data.studentId == request.auth.uid);
      allow create: if isAdmin();
      allow update: if isAdmin();
      allow delete: if isAdmin();
    }

    // Rules for grades collection
    match /grades/{gradeId} {
      allow read: if isAuthenticated() && 
        (isAdmin() || resource.data.studentId == request.auth.uid);
      allow write: if isAdmin() && isValidGradeData();
    }

    // Rules for attendance collection
    match /attendance/{recordId} {
      allow read: if isAuthenticated() && 
        (isAdmin() || resource.data.studentId == request.auth.uid);
      allow create: if isAdmin() && isValidAttendanceData();
      allow update: if isAdmin() && isValidAttendanceData();
      allow delete: if isAdmin();
    }

    // Rules for notifications collection
    match /notifications/{notificationId} {
      allow read: if isAuthenticated() && 
        (isAdmin() || request.auth.uid in resource.data.recipients);
      allow create: if isAdmin() && isValidNotificationData();
      allow update: if isAdmin() && isValidNotificationData();
      allow delete: if isAdmin() || 
        (request.auth.uid in resource.data.recipients && 
         request.resource.data.diff(resource.data).affectedKeys().hasOnly(['read']));
    }

    // Rules for enquiries collection
    match /enquiries/{enquiryId} {
      allow read: if isAdmin();
      allow create: if true; // Allow public to create enquiries
      allow update, delete: if isAdmin();
    }
    
    // Default deny
    match /{document=**} {
      allow read, write: if false;
    }
  }
} 