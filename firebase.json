{
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "emulators": {
    "dataconnect": {
      "dataDir": "dataconnect/.dataconnect/pgliteData"
    }
  },
  "dataconnect": {
    "source": "dataconnect"
  },
  "hosting": {
    "headers": [
      {
        "source": "**/*.woff2",
        "headers": [
          { "key": "Content-Type", "value": "font/woff2" }
        ]
      },
      {
        "source": "**/*.html",
        "headers": [
          { "key": "Content-Security-Policy", "value": "default-src 'self'; frame-ancestors 'self';" }
        ]
      }
    ]
  }
}
